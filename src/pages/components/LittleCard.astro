---
const { text } = Astro.props;
---

<section class="feature">
  <div class="content">
    <h2>{text}</h2>
    <p>{text}</p>
  </div>
</section>

<style>
  .placeholder {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .content {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }
</style>
